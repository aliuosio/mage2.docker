# Linux: docker-compose up -d;
# MacOS: docker-compose -f docker-compose.osx.yml up -d;

COMPOSE_HTTP_TIMEOUT=1800
WORKDIR=htdocs
SHOPURI=mage2.localhost
DB_DUMP=
