XDEBUG_ENABLE=false
SSL=true
TZ=Europe/Berlin
NAMESPACE=mage2
MAILHOG_EXTERNAL_PORT=8025
MAILHOG_PORT=1025
MYSQL_DATABASE=mage2
MYSQL_USER=mage2
MYSQL_PASSWORD=mage2
MYSQL_ROOT_PASSWORD=root
